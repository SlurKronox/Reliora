generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id               String            @id @default(cuid())
  email            String            @unique
  name             String?
  passwordHash     String
  createdAt        DateTime          @default(now())
  workspaceMembers WorkspaceMember[]
  accounts         Account[]
  sessions         Session[]
}

model Workspace {
  id                   String            @id @default(cuid())
  name                 String
  createdAt            DateTime          @default(now())
  brandPrimary         String?
  brandAccent          String?
  brandLogoUrl         String?
  creditLimit          Int               @default(1000)
  creditUsed           Int               @default(0)
  creditPeriodStart    DateTime          @default(now())
  plan                 String?
  stripeCustomerId     String?
  stripeSubscriptionId String?
  members              WorkspaceMember[]
  clients              Client[]
  googleConnections    GoogleConnection[]
  ga4ReportCaches      Ga4ReportCache[]
  creditLedgers        CreditLedger[]
  paymentHistory       PaymentHistory[]
}

model WorkspaceMember {
  id          String    @id @default(cuid())
  userId      String
  workspaceId String
  role        String
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
}

model Client {
  id                  String           @id @default(cuid())
  workspaceId         String
  name                String
  notes               String?
  ga4PropertyId       String?
  ga4PropertyDisplay  String?
  createdAt           DateTime         @default(now())
  workspace           Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  reports             Report[]
  ga4ReportCaches     Ga4ReportCache[]
}

model Report {
  id            String         @id @default(cuid())
  clientId      String
  periodStart   DateTime
  periodEnd     DateTime
  rawDataJson   String
  aiSummaryText String
  aiModel       String?
  costCredits   Int?
  useRealData   Boolean        @default(false)
  createdAt     DateTime       @default(now())
  client        Client         @relation(fields: [clientId], references: [id], onDelete: Cascade)
  publicReport  PublicReport?
  creditLedgers CreditLedger[]
}

model GoogleConnection {
  id           String    @id @default(cuid())
  workspaceId  String    @unique
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
}

model Ga4ReportCache {
  id            String    @id @default(cuid())
  workspaceId   String
  clientId      String
  ga4PropertyId String
  periodStart   DateTime
  periodEnd     DateTime
  payloadJson   String
  createdAt     DateTime  @default(now())
  workspace     Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  client        Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, clientId, ga4PropertyId, periodStart, periodEnd])
}

model PublicReport {
  id        String    @id @default(cuid())
  reportId  String    @unique
  token     String    @unique
  createdAt DateTime  @default(now())
  revokedAt DateTime?
  report    Report    @relation(fields: [reportId], references: [id], onDelete: Cascade)
}

model CreditLedger {
  id          String    @id @default(cuid())
  workspaceId String
  reportId    String?
  delta       Int
  reason      String
  createdAt   DateTime  @default(now())
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  report      Report?   @relation(fields: [reportId], references: [id], onDelete: SetNull)
}

model PaymentHistory {
  id                String   @id @default(cuid())
  workspaceId       String
  type              String
  amount            Float
  currency          String   @default("BRL")
  status            String
  externalId        String?
  externalStatus    String?
  plan              String?
  creditsAdded      Int?
  metadata          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  workspace         Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([externalId])
}

model WaitlistEmail {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
